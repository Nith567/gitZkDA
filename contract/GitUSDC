pragma solidity 0.8.20;
import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import {SafeERC20} from "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";

contract GitUSDC is ERC20 {

    constructor() ERC20("STABLECOIN", "USDC") {
        _mint(address(this), 100_000_000_000 * 1e6); // Mint 100M BEAST tokens to the contract
    }
    function decimals() public pure override returns (uint8) {
        return 6;
    }
    function claimFaucet(uint256 amountToDistribute) public {
        _mint(msg.sender,amountToDistribute*1e6);
    }
}

